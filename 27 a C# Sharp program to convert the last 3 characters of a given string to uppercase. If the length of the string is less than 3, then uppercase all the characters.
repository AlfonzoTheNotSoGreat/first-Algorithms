//Write a C# Sharp program to convert the last 3 characters of a given string to uppercase. If the length of the string is less than 3, then uppercase all the characters.
Console.WriteLine("Please enter a string");
string input = Console.ReadLine();

if (input.Length < 3)
{
    input = input.ToUpper();
    Console.WriteLine(input);
}
else
{
    string input2 = input.Substring(input.Length - 3);
    input2 = input2.ToUpper();
    string input3 = input.Substring(0, input.Length -3);
    Console.WriteLine(input3+input2);




}

Console.ReadKey();
