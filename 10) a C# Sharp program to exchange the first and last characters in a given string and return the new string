//Write a C# Sharp program to exchange the first and last characters in a given string and return the new string.
Console.WriteLine("Please enter a string");
string input = Console.ReadLine();

int count = input.Length;
if(count == 1)
{
    Console.WriteLine(input);
}
else
{
    string input1 = input.Substring(0, 1);
    string input2 = input.Substring(1, input.Length - 2);
    string input3 = input.Substring(input.Length - 1);

    Console.WriteLine(input3 + input2 + input1);
}

Console.ReadKey();
