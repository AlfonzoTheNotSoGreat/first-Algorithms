/*
 *Write a C# Sharp program to create a string taking the first 3 characters of a given string.
 *Return the string with the 3 characters added at both the front and back.
 *If the given string length is less than 3, use whatever characters are there.
 */

Console.WriteLine("Please enter a string");
string input = Convert.ToString(Console.ReadLine());
int number = input.Length;

if (number <= 2)
{
    string subString = input.Substring(0, 2);
    Console.WriteLine(subString + input + subString);

}
else if (number >= 3)
{
    string subString = input.Substring(0, 3);
    Console.WriteLine(subString + input + subString);
}



Console.ReadKey();
